<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hkhoi.fcard.SplashScreenFragments.Help4Fragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@id/fragment_help_imageView"
        android:src="@drawable/helper4"
        android:scaleType="centerCrop"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:background="@android:color/transparent"
        android:id="@+id/fragment_help_button_start"
        android:onClick="SplashScreenOnclick"/>

</RelativeLayout>
