<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_category"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_categories_imageView_icon"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_margin="@dimen/icon_padding"
            android:src="@drawable/category_placeholder" />

        <TextView
            android:id="@+id/row_categories_textView_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/icon_padding"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_text"
            android:text="Category"
            android:textSize="@dimen/font_size_category" />

    </LinearLayout>

</android.support.v7.widget.CardView>